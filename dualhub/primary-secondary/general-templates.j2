{#
  This is a sample to illustrate how the general adom template works
  - policy_hub_src_interface
  - policy_hub_dst_interface
  - policy_branch_src_interface
  - policy_branch_dst_interface
#}

config adom/pkg/ppkg_hub
    config firewall policy
        edit 1
            set name "allow-all-sample"
            set srcintf "{{ policy_hub_src_interface }}"     {# "any" #}
            set dstintf "{{ policy_hub_dst_interface }}"     {# "any" #}
            set action accept
            set srcaddr "all"
            set dstaddr "all"
            set schedule "always"
            set service "ALL"
            set nat enable
        next
    end
end


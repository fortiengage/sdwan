{# FortiAP VAP Jinja Templates #}
{# Meta Variables:
   - Required:
      - wifi_ssid_1
      - wifi_ssid_2
 #}

{#
1. WIFI Name, 
2. Security option: wpa2-only-enterprise or wpa2-only-personal
   1). wpa2-only-enterprise
   2). wpa2-only-personal
         set password: xxxxx
#}


config wireless-controller vap
    edit "{{ wifi_ssid_1 }}"
        set ssid "{{ wifi_ssid_1 }}"
        set security wpa2-only-enterprise
        set pmf optional
        set fast-bss-transition enable
        set auth usergroup
        set usergroup "Guest-group"
        set local-bridging enable
        set multicast-enhance enable
        set sticky-client-remove enable
        set sticky-client-threshold-5g "-85"
        set sticky-client-threshold-2g "-85"
        set sticky-client-threshold-6g "-85"
        set schedule "always"
    next
    edit "{{ wifi_ssid_2 }}"
        set ssid "{{ wifi_ssid_2 }}"
        set passphrase "12345678"
        set local-bridging enable
    next
end
